{
  "Mic": {
    "params": {
      "audio_device": "default",
      "samplerate": 16000,
      "buffer_size": 640,
      "channels": 1
    }
  },
  "Vad": {
    "params": {
      "samplerate": 16000,
      "repo_or_dir": "snakers4/silero-vad",
      "model_name": "silero_vad",
      "force_reload": false,
      "use_onnx": true,
      "no_voice_wait_sec": 1,
      "onnx_verbose": false,
      "verbose": false
    }
  },
  "Stt": {
    "params": {
      "device": "cpu",
      "model_name": "openai/whisper-large-v2",
      "low_cpu_mem_usage": true,
      "attn": "sdpa",
      "verbose": true,
      "auto_detect_language": true
    }
  },
  "Llm": {
    "params": {
      "custom_path": "",
      "model_name": "bartowski/Qwen2.5-32B-AGI-GGUF",
      "model_file": "Qwen2.5-32B-AGI-Q5_K_M.gguf",
      "num_gpu_layers": -1,
      "context_length": 8000,
      "streaming_output": true,
      "chat_format": "qwen",
      "system_message": "You are a helpful multilingual customer service assistant. CRITICAL: If the customer speaks in English, respond ONLY in English. If the customer speaks in Arabic, respond ONLY in Arabic. NEVER mix languages in your responses.",
      "verbose": true
    }
  },
  "Tts": {
    "params": {
      "device": "gpu",
      "tts_type": "gtts",
      "use_deepspeed": false,
      "text_splitting": false,
      "model_name": "tts_models/en/ljspeech/tacotron2-DDC",
      "force_reload": false,
      "verbose": true,
      "slow": false,
      "fallback_tts": "pyttsx3",
      "assets": {
        "voice_to_clone": "assets/Speaker1.wav"
      }
    }
  },
  "Ap": {
    "params": {
      "audio_device": "default",
      "samplerate": 24000,
      "buffer_size": 960,
      "channels": 1,
      "assets": {
        "listening_sound": "assets/listening.wav",
        "transition_sound": "assets/transition.wav"
      }
    }
  },
  "Ui": {
    "params": {
      "window_title": "Sound360",
      "window_size": "750",
      "assets": {
        "icon": "assets/aria_icon.png",
        "loading_gif": "assets/loading.gif",
        "transition_gif": "assets/transition.gif",
        "muted_mic_gif": "assets/muted_mic.gif"
      }
    }
  },
  "Nw": {
    "params": {
      "audio_compression": true,
      "host_ip": "0.0.0.0",
      "port": 12345,
      "client_target_ip": "0.0.0.0",
      "client_target_port": 12345
    }
  }
